<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatActivity"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/send_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginStart="@dimen/spacing_standard"
            android:layout_marginBottom="@dimen/spacing_standard"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/send_box_hint"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:maxHeight="@dimen/send_box_max_height"
            android:minHeight="@dimen/send_box_min_height"
            android:textSize="@dimen/standard_text"
            tools:text="" />

        <ImageButton
            android:id="@+id/send_message_button"
            android:layout_width="@dimen/send_box_min_height"
            android:layout_height="@dimen/send_box_min_height"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_standard"
            android:background="@color/white"
            android:enabled="false"
            android:importantForAccessibility="no"
            android:src="@drawable/icon_send" />
    </LinearLayout>
</merge>
